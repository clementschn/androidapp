<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAmazfit">
    <ImageView
        android:id="@+id/flechegauche"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/flecheretour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="9dp"
        />
    <Button
        android:id="@+id/buttonreturn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="65dp"
        android:background="#00FFFFFF"
        android:elevation="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/amazfit"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/amazfit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="9dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/whiteRectangle1"
        android:layout_width="410dp"
        android:layout_height="700dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amazfit" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Amazfit Bip U Pro Series"
        android:textColor="#1B153D"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/whiteRectangle1"
        android:elevation="8dp"
        />

    <TextView
        android:id="@+id/textseries7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:elevation="9dp"
        android:text="(With solo loop)"
        android:textColor="#9095A6"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/whiteRectangle1"
        app:layout_constraintTop_toBottomOf="@id/text1"
        />

    <TextView
        android:id="@+id/longtextseries7"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:elevation="9dp"
        android:text="The aluminium case is lightweight and made from 100 percent recycled aerospace grade alloy."
        android:textColor="#9095A6"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/whiteRectangle1"
        app:layout_constraintTop_toBottomOf="@id/textseries7"
        />

    <TextView
        android:id="@+id/prixapplewatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:elevation="9dp"
        android:text="$199"
        android:textColor="#5B41FF"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/text1"
        app:layout_constraintTop_toTopOf="@id/text1"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/rectanglebas"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="#4136F1"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/longtextseries7"
        />

    <TextView
        android:id="@+id/payer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="15dp"
        android:elevation="9dp"
        android:text="Add to cart"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/whiteRectangle1"
        app:layout_constraintTop_toTopOf="@id/rectanglebas"
        />
</androidx.constraintlayout.widget.ConstraintLayout>